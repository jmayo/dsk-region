gris_claro=#dddddc
gris_oscuro=#30302f
rosa=#df7250
ico_font_family="iconos"
ico_personal="\e607"
ico_empresas="\e606"
ico_catalogos="\e600"
ico_cerrar_sesion="\e609"
ico_e-mail="\e601"
ico_facebook="\e605"
ico_twitter="\e60c"

@font-face
	font-family "iconos"
	src url("../fonts/icomoon.eot?lqw3j3")
	src url("../fonts/icomoon.eot?#iefixlqw3j3") format("embedded-opentype"),
		url("../fonts/icomoon.woff?lqw3j3") format("woff"),
		url("../fonts/icomoon.ttf?lqw3j3") format("truetype"),
		url("../fonts/icomoon.svg?lqw3j3#icomoon") format("svg")
	font-weight normal
	font-style normal

body
	background -moz-linear-gradient(top,  rgba(0,0,0,0.65) 0%, rgba(0,0,0,0) 100%) /* FF3.6+ */
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.65)), color-stop(100%,rgba(0,0,0,0))) /* Chrome,Safari4+ */
	background -webkit-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* Chrome10+,Safari5.1+ */
	background -o-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* Opera 11.10+ */
	background -ms-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* IE10+ */
	background linear-gradient(to bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* W3C */
	font-family arial-regular
	font-size 14px

header
	background gris_oscuro
	//padding 0.1em
	//height 10em
	.titulo
		color gris_claro
		font-family arial-bold
		font-size 24px
		text-align center
		padding 0.5em
		overflow-x auto
nav
	background gris_oscuro
	//color gris_claro
	//font-family arial-regular
	//font-size 14px
	//position relative
	//display inline-block
	.menu
		// las siguientes 2 l√≠neas fijan el menu (colocan un scroll)
		//height 35px
		//line-height 35px
		display inline-block
		margin 0
		padding 0
		overflow-x auto
		//white-space nowrap
		//float left
		//position relative
		li
			display inline-block
			padding 0.5em
			a
				color gris_claro
				text-decoration none
			a.personal
				&:before
					//text-shadow 8px 8px rosa
					//box-shadow 2px 2px 10px rosa
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_personal
			a.empresas
				&:before
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_empresas
			a.catalogos
				&:before
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_catalogos

	.cerrar_sesion
		display inline-block
		overflow-x auto
		margin-top 1.4em
		padding 0
		float right
		li
			display inline-block
			padding 0.5em
			a
				color rosa
				text-decoration none
			a.cerrar_sesion
				&:before
					font-family ico_font_family
					font-size 40px
					content ico_cerrar_sesion
	
footer
	background gris_oscuro
	//color gris_claro
	//font-family arial-regular
	//font-size 14px
	//position relative
	.redes_sociales
		margin 0
		overflow-x auto
		padding 0
		//white-space nowrap
		li
			float right
			display inline-block
			padding 0.5em
			a
				color gris_claro
				font-size 20px
				text-decoration none
			a.e-mail
				&:before
					font-family ico_font_family
					content ico_e-mail
			a.facebook
				&:before
					font-family ico_font_family
					content ico_facebook
			a.twitter
				&:before
					font-family ico_font_family
					content ico_twitter