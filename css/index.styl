gris_claro=#dddddc
gris_oscuro=#30302f
gris_medio=#696868
rosa=#df7250
verde=#1cb28c
verde_rgb=rgb(28,178,140)
gris_claro_rgb_1=rgb(192,192,192)
gris_claro_rgb_2=rgb(224,224,224)
gris_claro_rgb_3=rgb(240,240,240)
gris_claro_rgba_1=rgba(0, 0, 0, 0.5)
ico_font_family="iconos"
ico_personal="\e607"
ico_empresas="\e606"
ico_catalogos="\e600"
ico_cerrar_sesion="\e609"
ico_e-mail="\e601"
ico_facebook="\e605"
ico_twitter="\e60c"
ico_nuevo="\e60a"
ico_eliminar="\e604"
ico_guardar="\e608"

@font-face
	font-family "iconos"
	src url("../fonts/icomoon.eot?lqw3j3")
	src url("../fonts/icomoon.eot?#iefixlqw3j3") format("embedded-opentype"),
		url("../fonts/icomoon.woff?lqw3j3") format("woff"),
		url("../fonts/icomoon.ttf?lqw3j3") format("truetype"),
		url("../fonts/icomoon.svg?lqw3j3#icomoon") format("svg")
	font-weight normal
	font-style normal

body
	background -moz-linear-gradient(bottom,  rgba(0,0,0,0.65) 0%, rgba(0,0,0,0) 100%) /* FF3.6+ */
	//background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,0.65)), color-stop(100%,rgba(0,0,0,0))) /* Chrome,Safari4+ */
	//background -webkit-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* Chrome10+,Safari5.1+ */
	//background -o-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* Opera 11.10+ */
	//background -ms-linear-gradient(top,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* IE10+ */
	//background linear-gradient(to bottom,  rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 100%) /* W3C */
	font-family arial-regular
	font-size 14px

header
	background gris_oscuro
	//padding 0.1em
	//height 10em
	.titulo
		color gris_claro
		font-family arial-bold
		font-size 24px
		text-align center
		padding 0.5em
		overflow-x auto

nav
	background gris_oscuro
	//color gris_claro
	//font-family arial-regular
	//font-size 14px
	//position relative
	//display inline-block
	.menu
		// las siguientes 2 lÃ­neas fijan el menu (colocan un scroll)
		//height 35px
		//line-height 35px
		display inline-block
		margin 0
		padding 0
		overflow-x auto
		//white-space nowrap
		//float left
		//position relative
		li
			display inline-block
			padding 0.5em
			a
				color gris_claro
				text-decoration none
			a.personal
				&:before
					//text-shadow 8px 8px rosa
					//box-shadow 2px 2px 10px rosa
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_personal
			a.empresas
				&:before
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_empresas
			a.catalogos
				&:before
					border-style solid
					border-color rosa
					border-radius 10px
					border-width 2px
					font-family ico_font_family
					font-size 80px
					content ico_catalogos

	.cerrar_sesion
		display inline-block
		overflow-x auto
		margin-top 1.4em
		padding 0
		float right
		li
			display inline-block
			padding 0.5em
			a
				color rosa
				text-decoration none
			a.cerrar_sesion
				&:before
					font-family ico_font_family
					font-size 40px
					content ico_cerrar_sesion

.contenido
	padding 0.5em
	.bloque
		display inline-block
		width 30%
		vertical-align top
		margin-right 2%
		.titulo_bloque
			background verde
			color white
			font-family arial-regular
			font-size 18px
			text-align center
		.caja_bloque
			background gris_medio
			.campos_bloque
				.ul_bloque
					width 800px
					list-style-type none
					//list-style-position outside
					margin 0
					padding 0.1em
					.li_bloque
						color gris_claro
						font-family arial-regular
						font-size 14px
						padding 0.2em
						//border-bottom 2px solid #eee
						//position relative
						.etiquetas_bloque
							width 150px
							margin-top 2px
							display inline-block
							float left
							padding 2px
						.inputs_bloque
							color black
							height 16px
							width 220px
							padding 2px 8px
							border 1px solid verde
							box-shadow 0px 0px 1px verde, 0 10px 15px gris_claro inset
							border-radius 1px
							&:focus
								border 2px solid rosa
								//padding-right 70px
						.textarea_bloque
							color black
							height 80px
							width 220px
							resize vertical
							padding 2px 8px
							border 1px solid verde
							box-shadow 0px 0px 1px verde, 0 10px 15px gris_claro inset
							border-radius 1px
							&:focus
								border 2px solid rosa
						.select_bloque
							color black
							height 22px
							width 238px
							padding 2px 8px
							border 1px solid verde
							box-shadow 0px 0px 1px verde, 0 10px 15px gris_claro inset
							border-radius 1px
							&:focus
								border 2px solid rosa
						.radio_bloque:not(old)
							width 2em
							margin 0
							padding 0
							font-size 1em
							opacity 0
							&:not(old) + label
								display inline-block
								margin-left -2em
								line-height 1.5em
							&:not(old) + label > span
								display inline-block
								width 0.875em
								height 0.875em
								margin 0.25em 0.5em 0.25em 0.25em
								border 0.0625em solid gris_claro_rgb_1
								border-radius 0.25em
								background gris_claro_rgb_2
								background-image -moz-linear-gradient(gris_claro_rgb_3,gris_claro_rgb_2)
								background-image -ms-linear-gradient(gris_claro_rgb_3,gris_claro_rgb_2)
								background-image -o-linear-gradient(gris_claro_rgb_3,gris_claro_rgb_2)
								background-image -webkit-linear-gradient(gris_claro_rgb_3,gris_claro_rgb_2)
								background-image linear-gradient(gris_claro_rgb_3,gris_claro_rgb_2)
								vertical-align bottom
							&:not(old):checked + label > span
								background-image -moz-linear-gradient(gris_claro_rgb_2,gris_claro_rgb_3)
								background-image -ms-linear-gradient(gris_claro_rgb_2,gris_claro_rgb_3)
								background-image -o-linear-gradient(gris_claro_rgb_2,gris_claro_rgb_3)
								background-image -webkit-linear-gradient(gris_claro_rgb_2,gris_claro_rgb_3)
								background-image linear-gradient(gris_claro_rgb_2,gris_claro_rgb_3)
							&:not(old):checked +  label > span > span
								display block
								width 0.5em
								height 0.5em
								margin 0.125em
								border 0.0625em solid verde_rgb
								border-radius 0.125em
								background verde_rgb
								background-image -moz-linear-gradient(verde_rgb,verde_rgb)
								background-image -ms-linear-gradient(verde_rgb,verde_rgb)
								background-image -o-linear-gradient(verde_rgb,verde_rgb)
								background-image -webkit-linear-gradient(verde_rgb,verde_rgb)
								background-image linear-gradient(verde_rgb,verde_rgb)
		.caja_foto
			//position absolute
			border 4px solid verde
			background gris_medio
			width 200px
			.foto
				margin 10px 10px
				//position relative
				//z-index 2
				img
					width 180px
					height 180px
					border-radius 20px
.caja_acciones
	text-align center
	.menu_acciones
		display inline-block
		margin 0
		padding 0
		overflow-x auto
	li
		display inline-block
		padding 0.5em
		a
			color gris_medio
			text-decoration none
		a.nuevo
			&:before
				font-family ico_font_family
				font-size 40px
				content ico_nuevo
		a.eliminar
			&:before
				font-family ico_font_family
				font-size 40px
				content ico_eliminar
		a.guardar
			&:before
				font-family ico_font_family
				font-size 40px
				content ico_guardar
		.buscar
			color black
			height 20px
			width 300px
			padding 2px 8px
			border 3px solid gris_medio
			//box-shadow 0px 0px 1px gris_medio, 0 5px 10px gris_medio inset
			border-radius 8px
			&:focus
				border 3px solid rosa
				//padding-right 70px
hr
	height 12px
	border 0px none
	box-shadow 0px 12px 12px -12px gris_claro_rgba_1 inset

footer
	background gris_oscuro
	//color gris_claro
	//font-family arial-regular
	//font-size 14px
	//position relative
	.redes_sociales
		margin 0
		overflow-x auto
		padding 0
		//white-space nowrap
		li
			float right
			display inline-block
			padding 0.5em
			a
				color gris_claro
				font-size 20px
				text-decoration none
			a.e-mail
				&:before
					font-family ico_font_family
					content ico_e-mail
			a.facebook
				&:before
					font-family ico_font_family
					content ico_facebook
			a.twitter
				&:before
					font-family ico_font_family
					content ico_twitter